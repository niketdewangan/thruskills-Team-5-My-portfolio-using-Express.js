<main>
    <div class="container">
        <div class="row">
            <div class="col-lg-12 mb-2 p-3">


                <!-- Blog list -->
                {{#each blog}}
                <div class="row mb-2 p-3">
                    <div class="col-lg-4 py-2 border-bottom">
                        {{!-- <strong class="d-inline-block  text-primary">Bootstrap</strong> --}}
                        <a href="/blog/{{_id}}" class="font-roboto font-size-35 text-dark ">{{title}}</a>
                    </div>
                    <div class="col-lg-4 py-2 border-bottom">
                        <p class=" font-rubik font-size-20 text-overflow pb-2 block-with-text">{{blog}}</p>
                        <a href="/blog/{{_id}}" class="font-rubik  text-primary font-weight-bold">Continue
                            reading . . .</a>
                    </div>
                    <div class="col-lg-4 py-2 border-bottom">
                        <img class="img-fluid" src="{{img}}" alt="number guessing game">
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
</main>